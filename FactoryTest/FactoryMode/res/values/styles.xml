<resources>

    <style name="MyTitleTextAppearance" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">  
        <item name="android:textSize">40sp</item> 
        <item name="android:textStyle">bold</item> 
        <item name="android:colorPrimary">#212121</item> 
        <item name="android:titleTextColor">#0099cc</item>
    </style>  

    <style name="MyTitleBar" parent="android:Theme.Material">  
        <item name="android:windowNoTitle">true</item>    
        <item name="android:colorBackground">@color/black_color</item>
        <item name="android:statusBarColor">#ff212121</item>
        <item name="android:textColorPrimary">@color/white_color</item> 
    </style>  
    
    <style name="MyTitleBarForKeyTest" parent="android:Theme.Material">  
        <item name="android:windowNoTitle">true</item>    
        <item name="android:colorBackground">@color/white_color</item>
        <item name="android:statusBarColor">#ffffff</item>
        <item name="android:textColorPrimary">@color/black_color</item> 
    </style> 
    
    <style name="MyCodeFont1" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#f1f507</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="MyCodeFont2" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
