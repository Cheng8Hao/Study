<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/torch_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.gesture.GestureOverlayView
        android:id="@+id/height_line1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/width_line"
        android:gestureStrokeWidth="6"
        android:visibility="visible" />

    <android.gesture.GestureOverlayView
        android:id="@+id/height_line2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/width_line"
        android:gestureStrokeWidth="6"
        android:visibility="invisible" />

    <android.gesture.GestureOverlayView
        android:id="@+id/height_line3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/width_line"
        android:gestureStrokeWidth="6"
        android:visibility="invisible" />

    <android.gesture.GestureOverlayView
        android:id="@+id/width_line1"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/height_line"
        android:gestureStrokeWidth="6"
        android:visibility="invisible" />

    <android.gesture.GestureOverlayView
        android:id="@+id/width_line2"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/height_line"
        android:gestureStrokeWidth="6"
        android:visibility="invisible" />

    <android.gesture.GestureOverlayView
        android:id="@+id/width_line3"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/height_line"
        android:gestureStrokeWidth="6"
        android:visibility="invisible" />
</RelativeLayout>
